{% extends 'base.html.twig' %}
{% import 'macro/common.html.twig' as common %}
{% trans_default_domain "app" %}

{% block content %}
    <h1>
        {{ 'article.list'|trans|capitalize }}
        {{ common.glyphicon(
            'plus-sign text-success',
            path('article_new', {'dictionary':dictionary.id}),
            'article.create'|trans|capitalize,
            'ROLE_USER'
        ) }}
    </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Grammar</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>
                    <a href="{{ path('article_show', { 'id': article.id, 'dictionary': article.dictionary.id }) }}">{{ article.id }}</a>
                </td>
                <td>{{ article.title }}</td>
                <td>{{ article.grammar }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': article.id, 'dictionary': article.dictionary.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'id': article.id, 'dictionary': article.dictionary.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
