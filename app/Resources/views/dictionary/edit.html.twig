{% extends 'base.html.twig' %}
{% trans_default_domain "app" %}

{% block content %}
    {% set creationMode = dictionary.id is empty %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">{{ 'breadcrumbs.homepage'|trans|capitalize }}</a></li>
        <li><a href="{{ path('dictionary_index') }}">{{ 'title.dictionary.list'|trans|capitalize }}</a></li>
        {% if creationMode %}
            <li class="active">{{ 'dictionary.create'|trans|capitalize }}</li>
        {% else %}
            <li><a href="{{ path('dictionary_show', {'id':dictionary.id}) }}">{{ dictionary.name }}</a></li>
            <li class="active">{{ 'dictionary.edit'|trans|capitalize }}</li>
        {% endif %}
    </ol>

    <h1>{{ (creationMode ? 'dictionary.create' : 'dictionary.edit')|trans|capitalize }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class=" col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="submit"
                   value="{{ 'buttons.save'|trans|capitalize }}"/>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
